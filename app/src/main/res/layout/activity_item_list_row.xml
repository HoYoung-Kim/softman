<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="5dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:background="@color/colorGrey">

        <ImageView
            android:id="@+id/imgThumUriM"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:contentDescription="태화하강도"
            android:scaleType="centerCrop"
            card_view:layout_constraintLeft_toLeftOf="parent"
            card_view:srcCompat="@drawable/no_images_placeholder" />

        <TextView
            android:id="@+id/tv_item_nameKr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_item_author"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/tv_item_author"
            android:layout_marginTop="5dp"
            android:text="태화하강도"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_item_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yi Chungmugong"
            android:textColor="@color/colorBlack"
            android:textSize="15sp"
            android:layout_toRightOf="@id/imgThumUriM"
            android:layout_below="@id/tv_item_nameKr"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/tv_item_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_author"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/imgThumUriM"
            android:text="PS0100100100100506000000"
            android:visibility="gone"
            card_view:layout_constraintBottom_toBottomOf="parent" />

    </RelativeLayout>
</android.support.v7.widget.CardView>